<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:background="@drawable/lavender_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Data"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/baseline_upload_file_24"
                    android:id="@+id/updateImage"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updatecaseNo"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="ENTER CASE NUMBER"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updateclientName"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="ENTER CLIENT NAME"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updateoppName"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="ENTER OPPONENT NAME"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updatefilingDate"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="DATE OF FILING"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updatecaseType"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="ENTER CASE TYPE"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updatejudgeName"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="ENTER JUDGE NAME"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updateArea"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="ENTER AREA"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/updateCharge"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="CHARGE"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Update"
                    android:id="@+id/updateButton"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    app:cornerRadius = "20dp"
                    android:layout_marginBottom="40dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</ScrollView>
